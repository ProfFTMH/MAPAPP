<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green"
    tools:context="com.example.fatemeh.mffb.Addpill"
    android:orientation="vertical">

    <WebView
        android:id="@+id/write"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
        <!--android:visibility="invisible"-->
        />


    <Button
        android:id="@+id/buttonhide"
        android:layout_gravity="center"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:visibility="invisible"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:orientation="horizontal"
        android:background="@drawable/shaping"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
        <LinearLayout
        android:layout_width="175dp"
        android:layout_height="370dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="79dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="Time:"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="period:"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"

        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="number of pills:"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of box:"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="15dp"

        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Name"
            />

        <EditText
            android:id="@+id/editText3"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="start time"
            />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:inputType="number"

            android:hint="every ? hours"

            />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_marginBottom="10dp"
            android:hint="how many ?"


            />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        </LinearLayout>
        </LinearLayout>

    <!--<ImageView-->
        <!--android:layout_gravity="center"-->
        <!--android:id="@+id/wait"-->
        <!--android:layout_width="150dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_marginBottom="20dp"-->
        <!--android:layout_marginTop="20dp"/>-->


    <Button
        android:id="@+id/button5"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:text="         Add pill                              "
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:background="@drawable/list"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"

        />

    <Button
        android:id="@+id/button6"
        android:layout_gravity="center"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:text=" Back               "
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/backgreen"
        />


</LinearLayout>
