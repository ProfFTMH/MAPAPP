<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picpurple"
    tools:context="com.example.fatemeh.mffb.Addpill"
    android:orientation="vertical">

    <WebView
        android:id="@+id/write3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
    android:visibility="invisible"
    />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:background="@drawable/shaping"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="420dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                tools:layout_editor_absoluteX="109dp"
                tools:layout_editor_absoluteY="79dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="42dp"
                android:layout_marginLeft="20dp"

                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:text="Time:"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_below="@+id/textView4"
                android:layout_marginLeft="20dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:text="Period:"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_below="@+id/textView12"
                android:layout_marginLeft="20dp"

                />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:text="Number of pills:"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"

                android:layout_below="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView312"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of used:"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="34dp"
                android:layout_marginLeft="20dp"

                />

            <TextView
                android:id="@+id/textView3312"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable:"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"></TextView>
                <!--android:layout_marginTop="5dp"-->

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:orientation="vertical"
            android:layout_marginTop="25dp">

            <EditText
                android:id="@+id/editText333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:ems="10"
                android:inputType="textPersonName" />
                <!--android:hint="Name"-->
                />

            <EditText
                android:id="@+id/editText33"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
                <!--android:hint="start time"-->
                />

            <EditText
                android:id="@+id/editText34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"

                android:layout_alignBottom="@+id/textView8"
                android:layout_alignLeft="@+id/editText3"
                android:layout_alignStart="@+id/editText3"
                android:ems="10"
                android:inputType="number"></EditText>

                <!--android:hint="every ? hours"-->

                />

            <EditText
                android:id="@+id/editText36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="18dp"></EditText>
                <!--android:hint="how many ?"-->


                />

            <EditText
                android:id="@+id/editText336"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="18dp"></EditText>
                <!--android:hint="how many ?"-->


                />

            <Switch
                android:id="@+id/switch1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="enable" />



        </LinearLayout>
    </LinearLayout>

    <!--<ImageView-->
        <!--android:layout_gravity="center"-->
        <!--android:id="@+id/wait3"-->
        <!--android:layout_width="150dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_marginBottom="20dp"-->
        <!--android:layout_marginTop="20dp"/>-->


    <Button
        android:id="@+id/button35"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:text="         Edit pill                              "
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@drawable/e"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"

        />

    <Button
        android:id="@+id/button36"
        android:layout_gravity="right"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:text=" Back               "
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/backpur"
        />




</LinearLayout>
